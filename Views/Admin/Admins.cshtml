
@{
    ViewBag.Title = "Admins";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<head>

    <style>
        .page-header {
            color: #787A91;
            font-weight: 600;
            font-size: 21px;
        }

        .table-container {
            box-shadow: 0 0 10px 1px rgba(217,217,217,1);
            padding: 20px;
        }
    </style>

    <link href="@Url.Content("~/Content/jquery.dataTables.css")" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.1.3/css/bootstrap.min.css" />
</head>
<p class="mb-4 mt-3 page-header">Admins</p>
<div class="container-fluid table-container">
    <div class="d-flex  flex-row">
        <div class="page-header">Total Admins : </div>
        <div class="fw-bold page-header"> 12</div>
    </div>
    <div class="row mt-2">
        <table class="table table-hover mt-2" id="user-table">
            <thead class="bg-dark text-white">
                <tr>
                    <th>User Name</th>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Gender</th>
                    <th>Phone Number</th>
                    <th>About</th>
                </tr>
            </thead>
        </table>
    </div>
</div>


<script src="https://code.jquery.com/jquery-3.5.1.js"></script>
<script src="https://cdn.datatables.net/1.11.5/js/dataTables.bootstrap5.min.js"></script>
<script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.js"></script>
<script>
    $(document).ready(function () {
        $('#user-table').DataTable({
            "$ajax": {
                "url": "/Admin/Admins",
                "type": "GET",
                "datatype": "json"
            },
            "columns": [
                { "data": "Username" },
                { "data": "Name" },
                { "data": "Email" },
                { "data": "PhoneNumber" },
                { "data": "Gender" },
                { "data": "About" },
            ]
        });
    });
</script>
