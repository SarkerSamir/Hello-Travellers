<style>
    body {
        width: 100%;
        height: 100%;
        background-color: #f5f5dc;
    }
</style>
<div class="signin-container">

    <form action="Login" method="post" class="signin-email">

        <h1 class="signin-text text-center  py-3">Sign In</h1>

        <div class="signup-input-group">
            <input type="email" placeholder="Email" name="Email" required>

        </div>

        <div class="signup-input-group">
            <input type="password" placeholder="Password" name="Password" id="myInput3" required>
            <i class="input-group-text bi bi-eye-slash" id="togglePassword1" onclick="showPass1()"></i>
        </div>

        <div class="signup-input-group">
            <button name="submit" class="SigninBtn">Login</button>
        </div>

        <!--<p class="signin-page-text text-center">Forgot Password! <a href="">Click here</a></p>-->

        <p class="signin-page-text text-center">Don't have an account? <a href="/UserAuth/SignUp">Sign Up Here</a></p>

    </form>


</div>
<script>
    function showPass1() {
    var x = document.getElementById("myInput3");
    if (x.type === "password") {
    x.type = "text";
    } else {
    x.type = "password";
    }
    }

</script>